<h1>Weeks</h1>

<h2>Week 1</h2>
<% @lessondays.each do |day| %>

  <% if day.course_week == 1 %>
  <p><%= link_to day.subject, lesson_day_path(day.id)%> <em><%= day.date.strftime("%A %d %B %Y") %> </em></p>
<% end %>
<% end %>

<h2>Week 2</h2>

<% @lessondays.each do |day| %>
  <% if day.course_week == 2 %>
  <p><%= link_to day.subject, lesson_day_path(day.id)%></p>
<% end %>
<% end %>

<h2>Week 3</h2>

<% @lessondays.each do |day| %>
  <% if day.course_week == 3%>
  <p><%= link_to day.subject, lesson_day_path(day.id)%></p>
<% end %>
<% end %>

