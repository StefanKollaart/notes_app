
<h2><%= @lessonday.subject%></h2>
<p>Teacher: <%= @lessonday.teacher%><br>
Date: <%= @lessonday.date.strftime("%A %e %B %Y") %></p>

<ul>
  <li>Notes</li>
<% if @lessonday.notes.any?%>
  <% @lessonday.notes.each do |note| %>
  <li><%= link_to note.note_topic, note_path(note.id) %>
    <% if note.created_at != note.updated_at %>
    updated by
    <% else %>
    created by
    <% end %>
    </body>
    </body>
    <em>written by
  <%= note.student_name %>
  <%= time_ago_in_words(note.updated_at) %> ago
</em></li>
  <% end %>
</ul>
<% else %>

<li>No notes found for this subject. </i>
<% end %>
</ul>
<p><%= link_to 'Add new note', new_note_path(@note) %></p>

<div class="navigation_tree">
  <span>>> <%= link_to 'Weeks', lesson_days_path %> >> Day</span>
</div>
