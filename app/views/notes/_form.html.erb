<%= form_for @note do |f| %>
  <%= f.label "Written by: " %>
  <%= f.text_field :student_name %>

  <%= f.label "Topic:" %>
  <%= f.text_field :note_topic %>

  <%= f.label "Note:" %>
  <%= f.text_field :note_text %>

  <%= f.label "Link:" %>
  <%= f.text_field :note_links %>

  <%= f.label "Code:" %>
  <%= f.text_field :note_code %>

  <%= f.label "Teacher's note: " if !(@note.new_record?)%>
  <%= f.text_field :teacher_note if !(@note.new_record?)%>

  <%= f.label "Student info: " %>
  <%= f.text_field :student_info %>

  <%= f.label "Lesson day: " %>
  <%= f.select :lesson_day_id do %>
  <% LessonDay.all.each do |p| %>
    <%= content_tag(:option, "#{p.date}: #{p.subject} - #{p.teacher}", value: p.id) %>
  <% end %>
<% end %>

  <%= f.submit (@note.new_record? ? "Create" : "Update") %>
<% end %>
