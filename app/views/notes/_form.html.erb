<%= form_for @note do |f| %>
  <%= f.label :student_name %>
  <%= f.text_field :student_name %>

  <%= f.label :note_topic %>
  <%= f.text_field :note_topic %>

  <%= f.label :note_text %>
  <%= f.text_field :note_text %>

  <%= f.label :note_links %>
  <%= f.text_field :note_links %>

  <%= f.label :note_code %>
  <%= f.text_field :note_code %>

  <%= f.label :teacher_note %>
  <%= f.text_field :teacher_note %>

  <%= f.label :student_info %>
  <%= f.text_field :student_info %>

  <%= f.label :lesson_day_id %>
  <%= f.number_field :lesson_day_id %>

  <%= f.submit (@note.new_record? ? "Create" : "Update") %>
<% end %>
